<h2>Artículos</h2>
<a href="/articles/add">Agregar Artículo</a>
{{#each articles}}
<div>
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <a href="/articles/edit/{{this._id}}">Editar</a>
    <form method="POST" action="/articles/{{this._id}}?_method=DELETE">
        <button type="submit">Eliminar</button>
    </form>
</div>
{{/each}}
