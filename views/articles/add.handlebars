<div class="container mt-5">
    <h2 class="text-center text-primary">Agregar Nuevo Artículo</h2>
    <form method="POST" action="/articles" class="mt-4">
        <div class="mb-3">
            <label for="title" class="form-label">Título</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Título del artículo" required />
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Contenido</label>
            <textarea class="form-control" id="content" name="content" rows="5" placeholder="Contenido del artículo" required></textarea>
        </div>
        <button type="submit" class="btn btn-success">Guardar</button>
        <a href="/articles" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
