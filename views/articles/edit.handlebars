<div class="container mt-5">
    <h2 class="text-center text-warning">Editar Artículo</h2>
    <form method="POST" action="/articles/{{article._id}}?_method=PUT" class="mt-4">
        <div class="mb-3">
            <label for="title" class="form-label">Título</label>
            <input type="text" class="form-control" id="title" name="title" value="{{article.title}}" required />
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Contenido</label>
            <textarea class="form-control" id="content" name="content" rows="5" required>{{article.content}}</textarea>
        </div>
        <button type="submit" class="btn btn-warning">Actualizar</button>
        <a href="/articles" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
